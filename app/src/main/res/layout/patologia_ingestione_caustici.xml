<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card.view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blu_persia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:orientation="vertical"
        tools:context=".PatologiaIngestioneCaustici">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button_ingestione_caustici"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/baseline_arrow_back_24"
                android:backgroundTint="@color/white" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/patologia_ingestione_caustici"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="38dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font_avenir_heavy"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp" >

            <Button
                android:id="@+id/clinica_ingestione_caustici"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/clinica"
                android:textAlignment="center"
                android:textColor="@color/blu_persia"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/font_sofiapro"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp" >

            <Button
                android:id="@+id/diagnosi_ingestione_caustici"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/diagnosi"
                android:textAlignment="center"
                android:textColor="@color/blu_persia"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/font_sofiapro"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp" >

            <Button
                android:id="@+id/trattamento_ingestione_caustici"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/trattamento"
                android:textAlignment="center"
                android:textColor="@color/blu_persia"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/font_sofiapro"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>