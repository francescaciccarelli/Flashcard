<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card.view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:background="@color/azzurro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Homepage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_app"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:background="@drawable/border_shape_nogreen"
            android:padding="30dp"/>

        <Button
            android:id="@+id/button_section1"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:text="@string/title_section1"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:backgroundTint="@color/blu_persia"/>

    </LinearLayout>
</ScrollView>