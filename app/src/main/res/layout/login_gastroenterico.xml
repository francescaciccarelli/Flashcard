<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card.view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Login_gastroenterico">

    <Button
        android:id="@+id/back_button_gastroenterico"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_arrow_back_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_section1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:fontFamily="@font/font_sofiapro"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/blu_persia" >

        <Button
            android:id="@+id/patologie_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/patologie"
            android:textAlignment="center"
            android:backgroundTint="@android:color/transparent"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_sofiapro"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/dark_green" >

        <Button
            android:id="@+id/sintomi_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/sintomi"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_sofiapro"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/arancio" >

        <Button
            android:id="@+id/cirrosi_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/complicanze"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_sofiapro"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/senape" >

        <Button
            android:id="@+id/contenuti_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/aggiuntivi"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_sofiapro"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>
