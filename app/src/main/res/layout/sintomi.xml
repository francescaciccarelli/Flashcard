<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card.view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:background="@color/dark_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:orientation="vertical"
        tools:context=".Sintomi">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/sintomi"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textSize="38dp"
        android:fontFamily="@font/font_avenir_heavy"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/diarrea_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/sintomo_diarrea"
            android:textAlignment="center"
            android:textColor="@color/dark_green"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_sofiapro"/>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/disfagia_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/sintomo_disfagia"
            android:textAlignment="center"
            android:textColor="@color/dark_green"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_sofiapro"/>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/dolore_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/sintomo_dolore_addominale"
            android:textAlignment="center"
            android:textColor="@color/dark_green"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_sofiapro"/>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/stipsi_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/sintomo_stipsi"
            android:textAlignment="center"
            android:textColor="@color/dark_green"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_sofiapro"/>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp">

        <Button
            android:id="@+id/vomito_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/sintomo_vomito"
            android:textAlignment="center"
            android:textColor="@color/dark_green"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_sofiapro"/>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>