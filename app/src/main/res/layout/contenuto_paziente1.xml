<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card.view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/senape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:orientation="vertical"
        tools:context=".ContenutoApproccioPaziente">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button_paziente1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/baseline_arrow_back_24"
                android:backgroundTint="@color/white" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contenuto_paziente"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/font_avenir_heavy"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="@string/paziente_valutazione1"
            android:fontFamily="@font/font_sofiapro"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:layout_margin="20dp"
                android:background="@drawable/baseline_circle_24"
                android:text="A"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/font_sofiapro"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paziente_valutazioneA1"
                    android:textSize="18dp"
                    android:fontFamily="@font/font_sofiapro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paziente_valutazioneA2"
                    android:textSize="18dp"
                    android:fontFamily="@font/font_sofiapro"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:layout_margin="20dp"
                android:background="@drawable/baseline_circle_24"
                android:text="B"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/font_sofiapro"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paziente_valutazioneB1"
                    android:fontFamily="@font/font_sofiapro"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paziente_valutazioneB2"
                    android:fontFamily="@font/font_sofiapro"
                    android:textSize="18dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:layout_margin="20dp"
                android:background="@drawable/baseline_circle_24"
                android:text="C"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/font_sofiapro"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paziente_valutazioneC1"
                    android:fontFamily="@font/font_sofiapro"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paziente_valutazioneC2"
                    android:fontFamily="@font/font_sofiapro"
                    android:textSize="18dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:layout_margin="20dp"
                android:background="@drawable/baseline_circle_24"
                android:text="D"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/font_sofiapro"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paziente_valutazioneD1"
                    android:fontFamily="@font/font_sofiapro"
                    android:textSize="18dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="36dp"
                android:layout_height="38dp"
                android:layout_margin="20dp"
                android:background="@drawable/baseline_circle_24"
                android:text="E"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/font_sofiapro"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paziente_valutazioneE1"
                    android:fontFamily="@font/font_sofiapro"
                    android:textSize="18dp"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paziente_valutazione_generale"
            android:layout_margin="20dp"
            android:fontFamily="@font/font_sofiapro"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:gravity="left"
                android:src="@drawable/baseline_warning_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paziente_alert"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/font_sofiapro"
                android:textSize="18dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>